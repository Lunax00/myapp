<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Stock Management</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/styles.css">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="wrapper ">
            <!--Sidebar  -->
            <aside id="sidebar">
                <div class="h-100">
                    <div class="sidebar-logo">
                        <a href="#" class="logo-link">&nbsp&nbsp&nbsp<i class="fa-duotone fa-solid fa-box" style="--fa-primary-color: #b4fde7; --fa-secondary-color: #b4fde7;"></i>  &nbsp  Stock Management</a>
                    </div>
                    <!--sidebar-nav-->
                    <ul class="sidebar-nav">
                        <li class="sidebar-header">
                            Tools & Operations
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "Home")" class="sidebar-link">
                                <i class="fa-solid fa-list" style="color: #f4e3a4;"></i> &nbsp Dashboard
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "Products")" class="sidebar-link">
                                <i class="fa-solid fa-box-open" style="color: #f4e3a4;"></i>
                                &nbsp Products
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "Suppliers")" class="sidebar-link">
                                <i class="fa-solid fa-people-carry-box" style="color: #f4e3a4;"></i>
                                &nbsp Suppliers
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "Orders")" class="sidebar-link">
                                <i class="fa-solid fa-basket-shopping" style="color: #f4e3a4;"></i>
                                &nbsp Orders
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="@Url.Action("Index", "StockMovements")" class="sidebar-link">
                                <i class="fa-solid fa-chart-line" style="color: #f4e3a4;"></i>
                                &nbsp Stock Movements
                            </a>
                        </li>
                        <li class="sidebar-header">
                            Account
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </aside>
            <!--Main component -->
            <div class="main">
                <nav class="navbar navbar-expand px-3  ">
                    <button class="btn" type="button">
                        <span class="navbar-toggler-icon px-3 " ;"></span>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <img src="~/images/user-ico.png" alt="User Icon" class="rounded-circle" style="width: 40px; height: 40px;">
                        <span class="ms-2 text-dark">@User.Identity.Name</span>
                    </div>
                </nav>
                <div class="content">
                    @RenderBody() <!-- This renders the content of the individual page -->
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Only render the login page content if not authenticated -->
        @RenderBody()
    }
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
